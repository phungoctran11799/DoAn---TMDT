@model WebsiteBanGiay.Models.Giay
@{
    ViewBag.Title = "Xóa Giày";
    Layout = "~/Views/LayOut/AdminLayout.cshtml";
}
<h2>Xác nhận Xóa</h2>
<h3>Bạn chắc chắn muốn Xóa giày này chứ ?</h3>
<div style="font-size:16px;word-wrap: break-word;">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TenGiay)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TenGiay)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.GiaBan)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.GiaBan)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.MoTa)
        </dt>
        <dd>
            @Html.Raw(Model.MoTa)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AnhBia)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AnhBia)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.NgayCapNhat)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NgayCapNhat)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.SoLuongTon)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SoLuongTon)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.MaNCC)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NhaCungCap.TenNCC)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.MaLoai)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Loai.TenLoai)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Moi)
        </dt>
        @if (Model.Moi == 1)
        {
            <dd>Mới</dd>
        }
        else
        {
            <dd>Cũ</dd>
        }
    </dl>
</div>
<img src="@Url.Content("~/HinhAnhSP/"+Model.AnhBia)" width="500" height="750">
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" style="background-color:red;" value="Xóa" class="btn btn-default" /> |
        @Html.ActionLink("Trở lại Trang Quản lý Giày", "Index")
    </div>
}