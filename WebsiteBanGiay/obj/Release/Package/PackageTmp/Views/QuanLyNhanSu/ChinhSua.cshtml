@model WebsiteBanGiay.Models.KhachHang
@{
    ViewBag.Title = "Chỉnh sửa Khách hàng";
    Layout = "~/Views/LayOut/AdminLayout.cshtml";
}
<h2>Thông tin mới của Khách hàng</h2>
@using (Html.BeginForm("ChinhSua", "QuanLyNhanSu", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaKH)
        @Html.HiddenFor(model => model.MatKhau)
        @Html.HiddenFor(model => model.TaiKhoan)
        @Html.HiddenFor(model => model.Email)
        @Html.HiddenFor(model => model.DiaChi)
        @Html.HiddenFor(model => model.SoDienThoai)

        @if (Model.MaKH == 1)
        {
            @Html.HiddenFor(model => model.Quyen)
            <div class="form-group">
                @Html.LabelFor(model => model.HoTen, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                </div>
            </div>
        }
        else
        {
            @Html.HiddenFor(model => model.HoTen)
            <div class="form-group">
                @Html.LabelFor(model => model.Quyen, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Quyen, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Quyen, "", new { @class = "text-danger" })
                </div>

            </div>
        }
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" style="background-color:orange;" value="Lưu thay đổi" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Trở lại Trang Quản lý Khách hàng", "Index")
</div>
